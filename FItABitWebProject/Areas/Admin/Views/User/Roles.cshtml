@using FitABit.Core.Models
@model UserRolesViewModel
@{
    ViewData["Title"] = "User Roles";
    var items = (List<SelectListItem>)ViewBag.RoleItems;
}

<title>@ViewData["Title"]</title>
<div class="row">
    <div class="col-4">
        <form id="edit" method="post">
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <input type="hidden" name="Name" value="@Model.Name" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <h5>User: @Html.DisplayFor(m=>m.Name)</h5>
            </div>
            <div class="form-floating">
                <div class="form-group" data-select2-id="29">
                    <label>User Roles</label>
                    <select asp-for="RoleNames" asp-items="@items" class="select2 select2-hidden-accessible" multiple="" data-placeholder="Select a State" style="width: 100%;" data-select2-id="7" tabindex="-1" aria-hidden="true">
                        @foreach (var role in (IEnumerable<SelectListItem>)ViewBag.RoleItems)
                        {
                        }

                    </select>
                </div>
            </div>

            <div align="center" style=" margin: 20px 0" class="floating">
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
            </div>

            <span class="popuptext" id="myPopup">@ViewData["Result"]</span>

        </form>
    </div>
</div>