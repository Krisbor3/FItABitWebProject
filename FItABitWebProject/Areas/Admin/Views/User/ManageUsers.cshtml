@using FitABit.Core.Models
@model IEnumerable<UserListViewModel>
@{
    ViewData["Title"] = "ADMIN Area";
}


<div class="card mb-4">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Manage Users
                </h2>
            </div>
            <div class="body table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>User</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                            @{int i=1;
                        @foreach (var user in Model)
                        {
                                <tr>
                                    <th scope="row">@i</th>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>
                                    <a asp-area="admin" asp-action="edit" asp-controller="user" asp-route-id="@user.Id" class="btn btn-default btn-circle waves-effect waves-circle waves-float">
                                        <span>EDIT</span>
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-area="admin" asp-action="roles" asp-controller="user" asp-route-id="@user.Id" class="btn bg-indigo waves-effect">
                                        <span>ROLE</span>
                                        <i class="fas fa-user-tag"></i>
                                    </a>
                                </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

