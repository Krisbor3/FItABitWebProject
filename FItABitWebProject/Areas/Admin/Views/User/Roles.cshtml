@using FitABit.Core.Models
@model UserRolesViewModel
@{
    ViewData["Title"] = "User Roles";
}

<title>@ViewData["Title"]</title>
<div class="row">
    <div class="col-4">
        <form id="edit" method="post">
            <input type="hidden" name="Id" value="@Model.UserId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <h5>User: @Html.DisplayFor(m=>m.Name)</h5>
            </div>
            <div class="form-floating">
                <div class="form-group" data-select2-id="29">
                    <label>User Roles</label>
                    <select asp-for="RoleIds" class="select2 select2-hidden-accessible" multiple="" data-placeholder="Select a State" style="width: 100%;" data-select2-id="7" tabindex="-1" aria-hidden="true">
                        @foreach (var role in (IEnumerable<SelectListItem>)ViewBag.RoleItems)
                        {
                            <option value="@role.Value" data-select2-id="37">@role.Text</option>
                        }

                    </select><span class="select2 select2-container select2-container--default select2-container--below" dir="ltr" data-select2-id="8" style="width: 100%;"><span class="selection"><span class="select2-selection select2-selection--multiple" role="combobox" aria-haspopup="true" aria-expanded="false" tabindex="-1" aria-disabled="false"><ul class="select2-selection__rendered"><li class="select2-search select2-search--inline"><input class="select2-search__field" type="search" tabindex="0" autocomplete="off" autocorrect="off" autocapitalize="none" spellcheck="false" role="searchbox" aria-autocomplete="list" placeholder="Select a State" style="width: 577.6px;"></li></ul></span></span><span class="dropdown-wrapper" aria-hidden="true"></span></span>
                </div>
            </div>

            <div align="center" style=" margin: 20px 0" class="floating">
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
            </div>

            <span class="popuptext" id="myPopup">@ViewData["Result"]</span>

        </form>
    </div>
</div>